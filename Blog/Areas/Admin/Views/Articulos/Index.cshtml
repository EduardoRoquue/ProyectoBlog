
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de articulos</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class=" btn btn-outline-dark"><i class="fas fa-plus"></i>Crear nuevo articulo</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblArticulos" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr class="table-dark">
                <th>ID</th>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Fecha Creacion</th>
                <th></th>
            </tr>
        </thead>
    </table>
    </div>

    @section Scripts{
        <script src="~/js/articulo.js">
        </script>
    }